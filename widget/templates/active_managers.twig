<div class="nika-elements-block__wrap">
    <div class="nika-elements-block__title">Активен для</div>
    <div class="nika-elements-block__content">
        <div class="nika-active-user-element">
            {% for manager in managers %}
                <div class="manager-element">
                    {#<label>
                        <input type="checkbox" name="manager.{{ manager.id }}" {% if manager.is_checked %}checked{% endif %}>
                        <span class="nika-active-user-name ">{{ manager.title }}</span>
                    </label>#}
                    <div class="nika-task-notify-checkbox">
                        <input type="checkbox"
                               class="nika-task-notify-checkbox__input"
                               name="manager.{{ manager.id }}"
                               id="manager-{{ manager.id }}"
                               {% if manager.is_checked %}checked{% endif %}>
                        <label for="manager-{{ manager.id }}"
                               class="nika-task-notify-checkbox__label">
                            <span class="nika-task-notify-checkbox__label-box"></span>
                            <span class="nika-task-notify-checkbox__label-text">{{ manager.title }}</span>
                        </label>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>