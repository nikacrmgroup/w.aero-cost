<div class="nika-elements-block__wrap">
    <div class="nika-elements-block__title">Соответствие полей</div>
    <div class="nika-elements-block">
        <div class="nika-active-status-element">
            {% for calcFieldCategories in calcFields %}
                {% for code, title in calcFieldCategories %}
                    <div class="nika-mapping-field">
                        <span>{{ title }}</span>

                        {{ include_control('suggest', {
                            name: code,
                            items: amoFieldsFormatted,
                            class_name: 'nika-suggest',
                            selected:  mapping[code] ? mapping[code] : 'n-first-select',
                        }) }}
                    </div>

                {% endfor %}

            {% endfor %}
        </div>
    </div>
</div>