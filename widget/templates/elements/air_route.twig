<div class="form-group step-element" id="el-air-routes">
    <span class="field-name">Маршрут авиа</span>
    {% set class_name_altered = 'form-field field-value cost-field-value field_air_route' %}
    {% for route in params %}
        {% set name = 'step-input-'~ route.id %}
        {% set id = name %}
        {{ include_control('input', {
            name: name,
            id: id,
            class_name: class_name_altered,
            placeholder: '...',
            value: route.value
        }) }}

    {% endfor %}
</div>

